<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context = ".RegisterActivity"
    android:id="@+id/reg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0B38AC">

        <LinearLayout
            android:id="@+id/email_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="45dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@+id/email_et"
                app:srcCompat="@mipmap/email_image_foreground"
                tools:ignore="MissingConstraints" />
            <EditText
                android:id="@+id/email_et"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:background="@drawable/bg"
                android:hint="     Email"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="45dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@+id/name_et"
                app:srcCompat="@mipmap/profile_image_foreground"
                tools:ignore="MissingConstraints" />
            <EditText
                android:id="@+id/name_et"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:background="@drawable/bg"
                android:hint="     Name"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/password_icon"
                android:layout_width="48dp"
                android:layout_height="47dp"
                app:layout_constraintTop_toTopOf="@+id/password_et"
                app:srcCompat="@mipmap/lock_image_foreground"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="75dp" />
            <EditText
                android:id="@+id/password_et"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg"
                android:hint="     Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/name_et"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="127dp" />
        </LinearLayout>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="129dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/buttons"
            android:text="Sign Up"
            android:textSize="7pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_lin"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>